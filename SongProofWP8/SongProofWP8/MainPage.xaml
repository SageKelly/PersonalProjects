<Page
    x:Class="SongProofWP8.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SongProofWP8"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="19,0,0,0">
            <TextBlock Grid.Row="0" Text="SCALE - PROOF" FontSize="18.14" Margin="0,12,0,0" FontFamily="Segoe WP"/>
        </StackPanel>
        <StackPanel Grid.Row="1" x:Name="buttonStack" Orientation="Vertical" VerticalAlignment="Center">
            <Button x:Name="BStart" Content="Start New Session" Click="ToSessionSetup" HorizontalAlignment="Center"/>
            <Button x:Name="BQuit" Content="Quit"  Visibility="Collapsed" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.SecondaryCommands>
                <AppBarButton Label="View Old Sessions"/>
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</Page>
